<div class="container">
		<div class="row">
			<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
				<h1>Editing Book</h1>
				<%= form_with model: @book do |book|%>
					<%if @book.errors.any?%>
						<div>
							<h3><%=@book.errors.count%>errors prohibited this book from begin save:</h3>
							<ul>
								<%@book.errors.full_messages.each do |message|%>
								<li><%=message %></li>
								<%end%>
							</ul>
						</div>
					<%end%>
					<div class="form-group">
						<label for="book_title">Title</label>
						<%=book.text_field :title,class: "form-control book_title"%>
					</div>
					<div class="form-group">
						<label for="book_body">Opinion</label>
						<%=book.text_area :body ,class: "form-control book_body"%>
					</div>
					<div class="form-group">
						<%=book.submit "Update Book",class: "btn bg-success text-light"%>
					</div>
					<%end%>
					<%= link_to "Show" ,book_path(@book.id),method: :get%>
					|
					<%= link_to "Back" ,books_path ,method: :get%>
			</div>
		</div>
	</div>
