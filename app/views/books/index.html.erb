<div class="container px5 px-sm-0">
	<div class="row">
		<%= render partial: "layouts/application",locals: {displaying_user: current_user}%>
			<div class="col-md-8 offset-md-1">
				<h2>Books</h2>
				<table class="table">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</thead>
					<tbody>
					<% @books.each do |book| %>
						<tr>
							<td><%= link_to user_path(book.user.id) do %><%=image_tag book.user.get_profile_image(80,80)%><%end%></td>
							<%=render partial: "layouts/title-opinion-etc",locals: {book: book}%>
						</tr>
					<%end%>
				</tbody>
			</table>
		</div>
	</div>
</div>