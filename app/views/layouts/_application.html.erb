<div class="col-md-3">
    <h2>User info</h2>
    <%= image_tag displaying_user.get_profile_image(100,100) %>
    <table class="table">
      <tbody>
        <tr>
          <td class="font-weight-bold">name</td>
          <td class="font-weight-bold"><%= displaying_user.name%></td>
        </tr>
        <tr>
          <td class="font-weight-bold">introduction</td>
          <td class="font-weight-bold"><%= displaying_user.introduction%></td>
        </tr>
      </tbody>
    </table>
      <%= link_to edit_user_path(displaying_user.id),class: "btn btn-block border-secondary  text-dark " do%>
        <i class="fas fa-user-cog fa-w-20 text-secondary"></i>
      <%end%>
    <h2 class="mt-3">New book</h2>
    <%= form_with model: @book_new, url: books_path do |book| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%=book.text_field :title, class: "form-control book_title" %>
      </div>
      <div class="form-group">
      <label for="book_body">Opinion</label>
      <%=book.text_area :body, class: "form-control book_body" %>
      </div>
      <div class="form-group">
        <%=book.submit "Create Book", class: "btn  bg-success text-light"%>
      </div>
    <%end%>
 </div>